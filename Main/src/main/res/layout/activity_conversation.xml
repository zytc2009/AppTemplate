<?xml version="1.0" encoding="utf-8"?>
<com.zy.main.widget.ConversationLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/conversationView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


            </FrameLayout>

            <include
                android:id="@+id/input_bar_container"
                layout="@layout/layout_conversation_input_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/input_sticker_conversation"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"/>

</com.zy.main.widget.ConversationLinearLayout>
